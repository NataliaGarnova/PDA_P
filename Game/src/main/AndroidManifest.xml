<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.natalia.pda_p.game" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/myicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.natalia.pda_p.game.Load"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Who"
            android:label="@string/title_activity_who" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.What"
            android:label="@string/title_activity_what" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Language"
            android:label="@string/title_activity_language" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.YourGame"
            android:label="@string/title_activity_your_game" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Dowload"
            android:label="@string/title_activity_dowload" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Levels"
            android:label="@string/title_activity_levels" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Lesson"
            android:label="@string/title_activity_lesson" >
        </activity>
        <activity
            android:name="com.natalia.pda_p.game.Exam"
            android:label="@string/title_activity_exam" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <supports-screens android:xlargeScreens="true" />
    <supports-screens android:largeScreens="true" />

</manifest>
